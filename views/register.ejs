<body>
    
    <div class="grid-container">
        <div class="grid-itemRubrik">
          <div class="Wrapp">
            <div class="rubrik">
              <h1>NordicViking</h1>
            </div>
            <a href="index.ejs"><img src="../img/VikingLogga.gif" alt="Logga" /></a>
          </div>
        </div>
        <div class="grid-itemNav">
          <ul class="navList">
            <li><a href="/">Home</a></li>
  
            <li><a href="/users/login">Play</a></li>
  
            <li><a href="/about">About us</a></li>
  
            <li><a href="/users/login">Log in</a></li>
  
            <li><a href="/users/register">Sign up</a></li>
          </ul>
        </div>

        <div class="grid-itemLogin">
          
          
          <form action="/users/register" method="POST">
            <div class="h1form"> <h2>Sign up</h2></div>
            <div class="alert">
              <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
             
            <%- include('partials/messages') %>
            </div>
            <div class="form-group-togehter">
            
              

                <label for="avatar" class="labelT">UserName</label>
                <input
                  type="avatar"
                  id="avatar"
                  name="avatar"
                  class="form-control"
                  placeholder="Enter Name"
                  value="<%= typeof avatar != 'undefined' ? avatar : '' %>"
                />

              
             
            
            
              <label for="firstName" class="labelT">First Name</label>
              <input
                type="firstName"
                id="firstName"
                name="firstName"
                class="form-control"
                placeholder="Enter firstname"
                value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
              />

              
              <label for="lastName" class="labelT">Last Name</label>
              <input
                type="lastName"
                id="lastName"
                name="lastName"
                class="form-control"
                placeholder="Enter LastName"
                value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
              />

              
              <label for="email" class="labelT">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            

            
              <label for="password" class="labelT">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Create Password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            
            
              <label for="password2" class="labelT">Password</label>
              <input
                type="password"
                id="password2"
                name="password2"
                class="form-control"
                placeholder="Confirm Password"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            
            <button type="submit" class="loginButton">
              Register
             </button>
            </div>
            <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
          </form>
    

        </div>
  
        <div class="grid-item8"><img src="../img/brabra.jpg" alt=""></div>
        <div class="grid-item9">
          <footer class="footer-distributed">
            <div class="footer-left">
              <h3>NordicViking</h3> 
  
